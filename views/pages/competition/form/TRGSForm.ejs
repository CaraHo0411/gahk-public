            <div class="form-group col-12 col-sm-6">
                <label>學校負責人姓名 Leader's Name:</label>
                <input type="text" name="TRGS[leaderName]" id="leaderName" required
                    <% if (req.session.TRGSdata != null) {%>value="<%= req.session.TRGSdata.leaderName%>" <%}%>>
                </div>
                <div class="form-group col-12 col-sm-6">
                    <label>學校負責人職位 Leader's Position:</label>
                    <input type="text" name="TRGS[leaderPosition]" id="leaderPosition" required
                    <% if (req.session.TRGSdata != null) {%>value="<%= req.session.TRGSdata.leaderPosition%>" <%}%>>
