            <input id="photo1" type="hidden" name="Acroage[photo1]" value="<%=req.session.Acrodata.photo1%>" />
            <br>
            <label>原本文件 Original File</label>
            <br>
            <img src="<%=req.session.Acrodata.photo1%>" style="height:150px; width:auto" />
