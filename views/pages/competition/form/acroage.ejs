    .card {
        border-radius: 0;
    }

    #extraForm {
        display: none;
        background: transparent;
    }

    #extraParent {
        display: none;
    }

    #labelHead {
        color: #83a70c;
        font-family: Verdana, Arial, Helvetica, sans-serif;
